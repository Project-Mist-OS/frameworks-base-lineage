<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.keyguard.KeyguardGifOverlay
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="360dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/keyguard_gif_view"
        android:layout_width="@dimen/lockscreen_gif_width"
        android:layout_height="@dimen/lockscreen_gif_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/lockscreen_gif_margin_top"
        android:scaleType="centerCrop" />

</FrameLayout>
</com.android.systemui.keyguard.KeyguardGifOverlay >
